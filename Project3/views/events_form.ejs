<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= event.Event_ID ? 'Edit Event' : 'Add Event' %></title>
  
  <link rel="stylesheet" href="/styles.css"> 
</head>
<body class="ballroom-bg-management"> 
    
  <nav class="navbar">
    <div class="navbar-brand">Ballroom Admin</div>
    <div class="navbar-nav">
      <a class="nav-link" href="/users">Users</a>
      <a class="nav-link" href="/competitions">Competitions</a>
      <a class="nav-link" href="/events">Events</a>
      <a class="nav-link" href="/logout">Logout</a>
    </div>
  </nav>
  
  <main class="page-content-wrapper">
      
    <h1 class="page-title"><%= event.Event_ID ? 'Edit Event' : 'Add Event' %></h1>
    
    <form action="<%= action %>" method="POST" class="frosted-form-card">
      
      <div class="form-group-custom">
        <label class="form-label-custom">Competition ID</label>
        <input class="input-field" name="competition_id" value="<%= event.Competition_ID || '' %>">
      </div>

      <div class="form-group-custom">
        <label class="form-label-custom">Title</label>
        <input class="input-field" name="title" value="<%= event.Title || '' %>" required>
      </div>

      <div class="form-row-custom">
        <div class="form-group-custom half-width">
          <label class="form-label-custom">Start Date & Time</label>
          <input type="datetime-local" class="input-field" name="start_date_time" value="<%= event.Start_date_time ? event.Start_date_time.toISOString().slice(0,16) : '' %>">
        </div>
        <div class="form-group-custom half-width">
          <label class="form-label-custom">End Date & Time</label>
          <input type="datetime-local" class="input-field" name="end_date_time" value="<%= event.End_date_time ? event.End_date_time.toISOString().slice(0,16) : '' %>">
        </div>
      </div>

      <div class="form-group-custom">
        <label class="form-label-custom">Number of Rounds</label>
        <input type="number" class="input-field" name="rounds" value="<%= event.Rounds || '' %>">
      </div>

      <button type="submit" class="view-btn save-btn-custom">Save</button>
      <a href="/events" class="action-btn btn-delete">Cancel</a>
    </form>
  </main>
</body>
</html>