<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Dashboard</title>
  
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="dashboard-bg">
  
  <%- include('navbar') %>

  <main class="dashboard-wrapper mt-5">
    
    <h1 class="page-title welcome-title">
        Welcome, <%= user.first_name %>!
        <span class="role-badge"><%= user.role %></span>
    </h1>

    <% if (user.role === 'Dancer') { %>
        <div class="content-card mb-4">
            <div class="card-title-header mb-3" style="font-size: 2rem;">
                Your Competition Registrations
            </div>
            
            <div class="card-body-custom">
                <% if (registeredCompetitions.length > 0) { %>
                    <p class="lead-custom text-cyan">
                        You are confirmed for **<%= registeredCompetitions.length %>** competition(s)!
                    </p>
                    <div class="table-container">
                        <table class="styled-table">
                            <thead>
                                <tr>
                                    <th>Competition</th>
                                    <th>Location</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% registeredCompetitions.forEach(comp => { %>
                                    <tr>
                                        <td><%= comp.location %></td>
                                        <td><%= comp.location_details %></td>
                                        <td><span class="status-badge success-badge">Registered</span></td>
                                        <td>
                                            <a href="/competitions/<%= comp.competition_id %>" class="action-btn btn-view">View Details</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert-custom alert-info-custom">
                        You have not registered for any competitions yet.
                        <a href="/competitions" class="alert-link-custom">Browse Competitions</a>.
                    </div>
                <% } %>
            </div>
        </div>
    <% } %>

    <% if (user.role === 'Organizer' || user.role === 'Admin') { %>
        <div class="content-card">
            <div class="card-title-header mb-3" style="font-size: 2rem;">
                Your Organized Competitions
            </div>
            <div class="card-body-custom">
                <% if (organizedCompetitions.length > 0) { %>
                    <p class="lead-custom text-cyan">
                        You are the organizer for **<%= organizedCompetitions.length %>** competition(s).
                    </p>
                    <div class="table-container">
                        <table class="styled-table">
                            <thead>
                                <tr>
                                    <th>Competition</th>
                                    <th>Location</th>
                                    <th>Sanctioned</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% organizedCompetitions.forEach(comp => { %>
                                    <tr>
                                        <td><%= comp.location %></td>
                                        <td><%= comp.location_details %></td>
                                        <td><%= comp.sanctioned ? '✅ Yes' : '❌ No' %></td>
                                        <td>
                                            <a href="/competitions/edit/<%= comp.competition_id %>" class="action-btn btn-edit">Edit/Manage</a>
                                            <a href="/reports/competition/<%= comp.competition_id %>" class="action-btn btn-view">View Registrants</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="alert-custom alert-warning-custom">
                        You have not organized any competitions yet.
                        <a href="/competitions/add" class="alert-link-custom">Start a New Competition</a>.
                    </div>
                <% } %>
            </div>
        </div>

        <div class="content-card quick-links-card mt-4 p-3">
            <h5 class="card-title-header" style="font-size: 1.5rem; margin-bottom: 15px;">Quick Links for Organizers</h5>
            <a href="/users" class="view-btn action-btn" style="margin-right: 15px;">Manage Users</a>
            <a href="/competitions/add" class="view-btn action-btn">Add New Competition</a>
        </div>
    <% } %>
  </main>
</body>
</html>