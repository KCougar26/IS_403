<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="bg-light">
  <%- include('navbar') %>

  <main class="container mt-5">
    <h1 class="mb-4">
        Welcome, <%= user.first_name %>!
        <span class="badge bg-primary"><%= user.role %></span>
    </h1>

    <% if (user.role === 'Dancer') { %>
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">Your Competition Registrations</h4>
            </div>
            <div class="card-body">
                <% if (registeredCompetitions.length > 0) { %>
                    <p class="lead text-success">
                        You are confirmed for **<%= registeredCompetitions.length %>** competition(s)!
                    </p>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Competition</th>
                                <th>Location</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% registeredCompetitions.forEach(comp => { %>
                                <tr>
                                    <td><%= comp.location %></td> <td><%= comp.location_details %></td>
                                    <td><span class="badge bg-success">Registered</span></td>
                                    <td>
                                        <a href="/competitions/<%= comp.competition_id %>" class="btn btn-sm btn-info">View Details</a>
                                        </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="alert alert-info text-center">
                        You have not registered for any competitions yet.
                        <a href="/competitions" class="alert-link">Browse Competitions</a>.
                    </div>
                <% } %>
            </div>
        </div>
    <% } %>

    <% if (user.role === 'Organizer' || user.role === 'Admin') { %>
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">Your Organized Competitions</h4>
            </div>
            <div class="card-body">
                <% if (organizedCompetitions.length > 0) { %>
                    <p class="lead text-primary">
                        You are the organizer for **<%= organizedCompetitions.length %>** competition(s).
                    </p>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Competition</th>
                                <th>Location</th>
                                <th>Sanctioned</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% organizedCompetitions.forEach(comp => { %>
                                <tr>
                                    <td><%= comp.location %></td>
                                    <td><%= comp.location_details %></td>
                                    <td><%= comp.sanctioned ? '✅ Yes' : '❌ No' %></td>
                                    <td>
                                        <a href="/competitions/edit/<%= comp.competition_id %>" class="btn btn-sm btn-warning">Edit/Manage</a>
                                        <a href="/reports/competition/<%= comp.competition_id %>" class="btn btn-sm btn-primary">View Registrants</a>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else { %>
                    <div class="alert alert-warning text-center">
                        You have not organized any competitions yet.
                        <a href="/competitions/add" class="alert-link">Start a New Competition</a>.
                    </div>
                <% } %>
            </div>
        </div>

        <div class="mt-4 p-3 bg-light border rounded">
            <h5>Quick Links for Organizers</h5>
            <a href="/users" class="btn btn-outline-dark me-2">Manage Users</a>
            <a href="/competitions/add" class="btn btn-outline-dark">Add New Competition</a>
        </div>
    <% } %>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>