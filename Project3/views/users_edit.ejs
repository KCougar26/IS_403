<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= user.User_ID ? 'Edit User' : 'Add User' %></title>
  
  <link rel="stylesheet" href="/styles.css"> 
</head>
<body class="ballroom-bg-management"> 
    
  <nav class="navbar">
    <div class="navbar-brand">Ballroom Admin</div>
    <div class="navbar-nav">
      <a class="nav-link" href="/users">Users</a>
      <a class="nav-link" href="/competitions">Competitions</a>
      <a class="nav-link" href="/events">Events</a>
      <a class="nav-link" href="/logout">Logout</a>
    </div>
  </nav>
  
  <main class="page-content-wrapper">
      
    <h1 class="page-title"><%= user.user_id ? 'Edit User' : 'Add User' %></h1>
    
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="frosted-form-card" style="max-width: 600px; margin: 0 auto 20px; padding: 15px; border: 1px solid #FF4500;">
        <p style="color: #FF4500; text-align: center; font-weight: bold;"><%= error %></p>
      </div>
    <% } %>
    
    <form action="<%= action %>" method="POST" class="frosted-form-card">
        
        <div class="form-row-custom">
            <div class="form-group-custom half-width">
              <label class="form-label-custom">First Name</label>
              <input class="input-field" name="first_name" value="<%= user.first_name || '' %>" required>
            </div>
            <div class="form-group-custom half-width">
              <label class="form-label-custom">Last Name</label>
              <input class="input-field" name="last_name" value="<%= user.last_name || '' %>" required>
            </div>
        </div>
        
        <div class="form-row-custom">
            <div class="form-group-custom half-width">
              <label class="form-label-custom">Phone</label>
              <input class="input-field" name="phone_number" value="<%= user.phone_number || '' %>">
            </div>
            <div class="form-group-custom half-width">
              <label class="form-label-custom">Birthday</label>
              <input type="date" class="input-field" name="birthday" value="<%= user.birthday ? new Date(user.birthday).toISOString().split('T')[0] : '' %>">
            </div>
        </div>

        <div class="form-group-custom" style="margin-top: 20px;">
            <button type="submit" class="view-btn save-btn-custom">Save</button>
            <a href="/users" class="action-btn btn-delete">Cancel</a>
        </div>
    </form>
  </main>
</body>
</html>