<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= user.User_ID ? 'Edit User' : 'Add User' %></title>
  
  <link rel="stylesheet" href="/css/styles.css"> 
</head>
<body class="ballroom-bg-management">
    
  <nav class="navbar">
    <div class="navbar-brand">Ballroom Admin</div>
    <div class="navbar-nav">
      <a class="nav-link" href="/users">Users</a>
      <a class="nav-link" href="/competitions">Competitions</a>
      <a class="nav-link" href="/events">Events</a>
      <a class="nav-link" href="/logout">Logout</a>
    </div>
  </nav>

  <main class="page-content-wrapper">
    
    <h1 class="page-title"><%= user.User_ID ? 'Edit User' : 'Add User' %></h1>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="frosted-form-card" style="max-width: 750px; margin: 0 auto 20px; padding: 15px; border: 1px solid #FF4500;">
        <p style="color: #FF4500; text-align: center; font-weight: bold;"><%= error %></p>
      </div>
    <% } %>
    
    <form action="<%= action %>" method="POST" class="frosted-form-card" style="max-width: 750px;">
      
      <div class="form-row-custom">
        <div class="form-group-custom half-width">
          <label class="form-label-custom">First Name</label>
          <input class="input-field" name="first_name" value="<%= user.first_name || '' %>" required>
        </div>
        <div class="form-group-custom half-width">
          <label class="form-label-custom">Last Name</label>
          <input class="input-field" name="last_name" value="<%= user.last_name || '' %>" required>
        </div>
      </div>
      
      <div class="form-row-custom">
        <div class="form-group-custom half-width">
          <label class="form-label-custom">Username</label>
          <input class="input-field" name="username" value="<%= user.username || '' %>" required>
        </div>
        <div class="form-group-custom half-width">
          <label class="form-label-custom">Password</label>
          <input class="input-field" type="password" name="password" value="<%= user.password || '' %>" required>
        </div>
      </div>
      
      <div class="form-group-custom" style="max-width: calc(50% - 10px);">
        <label class="form-label-custom">Confirm Password</label>
        <input class="input-field" type="password" id="confirmPassword" required>
        <div id="passwordError" class="text-danger-custom" style="display:none;">
          Passwords do not match.
        </div>
      </div>

      <div class="form-row-custom">
        <div class="form-group-custom half-width">
          <label class="form-label-custom">Phone</label>
          <input class="input-field" name="phone_number" value="<%= user.phone_number || '' %>">
        </div>
        <div class="form-group-custom half-width">
          <label class="form-label-custom">Birthday</label>
          <input type="date" class="input-field" name="birthday" value="<%= user.birthday || '' %>">
        </div>
      </div>

      <div class="form-group-custom">
        <label class="form-label-custom">Role</label>
        <select id="role" name="role" class="input-field form-select-custom">
          <option value="User" <%= user.role === 'User' ? 'selected' : '' %>>User</option>
          <option value="Judge" <%= user.role === 'Judge' ? 'selected' : '' %>>Judge</option>
          <option value="Dancer" <%= user.role === 'Dancer' ? 'selected' : '' %>>Dancer</option>
          <option value="Organizer" <%= user.role === 'Organizer' ? 'selected' : '' %>>Organizer</option>
        </select>
      </div>

      <div id="role-fields" class="mt-3"></div>

      <button type="submit" class="view-btn save-btn-custom" style="margin-top: 20px;">Save</button>
      <a href="/users" class="action-btn btn-delete">Cancel</a>
    </form>

<script>
  // Function to render the correct fields on page load/role change
  function renderRoleFields(role, container) {
    container.innerHTML = "";
    let html = '';

    // Re-use custom classes in generated HTML
    if (role === "Judge") {
      html = `
        <div class="form-group-custom">
          <label class="form-label-custom">Add Code (required)</label>
          <input class="input-field" name="add_code" required>
        </div>
        <div class="form-check-custom" style="margin-top: 10px;">
          <input class="check-input-custom" type="checkbox" name="ISTD_certified">
          <label class="check-label-custom">ISTD Certified</label>
        </div>`;
    }

    else if (role === "Dancer") {
      html = `
        <div class="form-group-custom">
          <label class="form-label-custom">NDCA Number</label>
          <input class="input-field" name="NDCA_number">
        </div>
        <div class="form-group-custom" style="margin-top: 10px;">
          <label class="form-label-custom">NDCA Expiration</label>
          <input type="date" class="input-field" name="NDCA_expiration">
        </div>
        <div class="form-group-custom" style="margin-top: 10px;">
          <label class="form-label-custom">Type</label>
          <input class="input-field" name="Type">
        </div>`;
    }

    else if (role === "Organizer") {
      html = `
        <div class="form-group-custom">
          <label class="form-label-custom">Add Code (required)</label>
          <input class="input-field" name="add_code" required>
        </div>
        <div class="form-check-custom" style="margin-top: 10px;">
          <input class="check-input-custom" type="checkbox" name="Recognized">
          <label class="check-label-custom">Recognized Organizer</label>
        </div>`;
    }
    container.innerHTML = html;
  }
  
  // Initialize role fields on page load
  const roleSelect = document.getElementById("role");
  const roleContainer = document.getElementById("role-fields");
  renderRoleFields(roleSelect.value, roleContainer);

  // Event Listener for change
  roleSelect.addEventListener("change", function () {
    renderRoleFields(this.value, roleContainer);
  });
</script>
    <script>
      const form = document.querySelector("form");
      const passwordInput = document.querySelector("input[name='password']");
      const confirmInput = document.getElementById("confirmPassword");
      const errorMsg = document.getElementById("passwordError");

      form.addEventListener("submit", function(e) {
      if (passwordInput.value !== confirmInput.value) {
        e.preventDefault();
        errorMsg.style.display = "block";
        confirmInput.classList.add("input-field-error"); // Use custom error class
      } else {
        errorMsg.style.display = "none";
        confirmInput.classList.remove("input-field-error");
      }
      });
</script>
  </main>
</body>
</html>