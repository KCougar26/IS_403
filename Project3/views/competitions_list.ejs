<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Ballroom Competition</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body class="ballroom-bg-management">
    
  <nav class="navbar">
    <div class="navbar-brand">Ballroom Admin</div>
    <div class="navbar-nav">
      <a class="nav-link" href="/users">Users</a>
      <a class="nav-link" href="/competitions">Competitions</a>
      <a class="nav-link" href="/events">Events</a>
      <a class="nav-link" href="/logout">Logout</a>
    </div>
  </nav>

  <main class="page-content-wrapper">

    <div class="page-header-container">
      <h1 class="page-title">Competitions</h1>
      <% if (user && user.isOrganizer) { %>
        <a href="/competitions/add" class="view-btn add-btn-custom">+ Add Competition</a>
      <% } %>
    </div>

    <div class="table-container">

      <table class="styled-table">
        <thead>
          <tr>
            <th>ID</th>
            <th>Organizer ID</th>
            <th>Location</th>
            <th>Sanctioned</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% competitions.map(c => { %>
          <tr>
            <td><%= c.competition_id %></td>
            <td><%= c.organizer_id || '-' %></td>
            <td><%= c.location %></td>
            <td><%= c.sanctioned ? '✅' : '❌' %></td>
            <td>
              <a href="/competitions/edit/<%= c.competition_id %>" class="action-btn btn-edit">Edit</a>
              <a href="/competitions/delete/<%= c.competition_id %>" class="action-btn btn-delete" onclick="return confirm('Delete this competition?')">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div> </main>
</body>
</html>