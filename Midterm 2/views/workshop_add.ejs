<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Workshop Creation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="bg-light">

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <% if (user && user.isManager) { %>
        <span class="navbar-brand mb-0 h1"><%= user.username + " (Manager)" %></span>
      <% } else { %>
        <span class="navbar-brand mb-0 h1"><%= user.username + " (User)" %></span>
      <% } %>
      %>
      <div class="d-flex">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Workshops List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-8 col-xl-7">
        
        <!-- Back Arrow -->
        <div class="mb-4">
          <a href="/" class="btn btn-link text-decoration-none fs-5 p-0">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
            </svg>
            <span class="ms-2">Back</span>
          </a>
        </div>

        <!-- Header -->
        <div class="text-center mb-5">
          <h1 class="display-5 fw-bold">Create Workshop</h1>
          <p class="text-muted fs-5">Fill in the information below</p>
        </div>

        <!-- Main Card -->
        <div class="card border-0 shadow-lg">
          <div class="card-body p-5">
            <% if (error_message) { %>
              <div class="alert alert-danger mb-4" role="alert">
                <strong>Error:</strong> <%= error_message %>
              </div>
            <% } %>

            <form method="POST" action="/workshop_add">
              
              <!-- Workshop Title and Description area -->
              <div class="bg-light rounded-3 p-4 mb-4">
                <h5 class="border-bottom pb-3 mb-4">Workshop Details</h5>
                
                <div class="mb-4">
                  <label class="form-label fw-semibold">Title</label>
                  <input 
                    type="text" 
                    class="form-control form-control-lg" 
                    name="title" 
                    placeholder="Workshop title" 
                    required> 
                </div>
                
                <div class="mb-0">
                  <label class="form-label fw-semibold">Description</label>
                  <input 
                    type="textarea" 
                    class="form-control form-control-lg" 
                    name="description" 
                    placeholder="Tell me about the workshop" 
                    required>
                </div>
              </div>

              <!-- Rest of the Workshop information (date, location, max seats)-->
                <div class="mb-4">
                    <label class="form-label">Date of Event</label>
                    <input 
                        type="date" 
                        class="form-control" 
                        name="event_date"
                        required>
                </div>
                <div class="mb-4">
                    <label class="form-label">Location</label>
                    <input 
                        type="text" 
                        class="form-control" 
                        name="location"
                        required>
                </div>
                <div class="mb-4">
                    <label class="form-label">Max Number of Seats</label>
                    <input 
                        type="number" 
                        class="form-control" 
                        name="max_seats"
                        required>
                </div>

              <!-- Submit Button -->
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                  Create Workshop
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>