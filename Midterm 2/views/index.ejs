<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Workshop Database</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <% if (user && user.isManager) { %>
        <span class="navbar-brand mb-0 h1"><%= user.username + " (Manager)" %></span>
      <% } else { %>
        <span class="navbar-brand mb-0 h1"><%= user.username + " (User)" %></span>
      <% } %>
      %>
      <div class="d-flex">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Workshops List</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Beginning of the database table -->
  <div class="container py-5">
    <h1 class="text-center mb-4">Workshops Database</h1>
      <% if (user && user.isManager) { %>
        <a href="/workshop_add" class="btn btn-success">+ Add Workshop</a>
      <% } %>
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">All Workshops (Ordered by Event Date)</h5>
      </div>
      <div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Title</th>
              <th>Event Date</th>
              <th>Location</th>
              <th>Max Seats</th>
              <% if (user && user.isManager) { %>
                <th>Actions</th>
              <% } %>
            </tr>
          </thead>
          <tbody>
            <% worshopList.forEach(p => { %>
              <tr>
                <td><%= p.title %></td>
                <td><%= p.event_date %></td>
                <td><%= p.location %></td>
                <td><%= p.max_seats %></td>
                <td>
                <% if (user && user.isManager) { %>
                  <a href="/workshop_edit/<%= p.id %>" class="btn btn-sm btn-warning">Edit</a>
                  <button class="btn btn-sm btn-danger" onclick="confirmDelete(<%= p.id %>)">Delete</button>
                <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

    <!-- Delete Confirmation Modal (hidden at first) -->
  <div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Confirm Delete</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to delete this workshop?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes</button>
        </div>
      </div>
    </div>
  </div>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    let workshopIdToDelete = null;
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

    function confirmDelete(workshopId) {
      workshopIdToDelete = workshopId;
      deleteModal.show();
    }

    document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
      if (workshopIdToDelete) {
        // Create a form and submit it to delete the user
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/workshop_delete/${workshopIdToDelete}`;
        document.body.appendChild(form);
        form.submit();
      }
    });
    </script>
</body>
</html>