<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Pokémon Database</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <span class="navbar-brand mb-0 h1">Assignment 4</span>
      <div class="d-flex">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Pokemon</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/user_list">Users</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container py-5">
    <h1 class="text-center mb-4">Pokémon Database</h1>

    <form action="/searchPokemon" method="POST" class="d-flex justify-content-center mb-5">
      <input type="text" name="name" class="form-control w-50 me-2" placeholder="Enter Pokémon name" required />
      <button class="btn btn-primary" type="submit">Search</button>
    </form>

    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h5 class="mb-0">All Pokémon (Ordered by Name)</h5>
      </div>
      <div class="card-body">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Base Total</th>
            </tr>
          </thead>
          <tbody>
            <% pokemonList.forEach(p => { %>
              <tr>
                <td><%= p.id %></td>
                <td><%= p.description %></td>
                <td><%= p.base_total %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

</body>
</html>